{
  "name": "sander",
  "description": "Promise-based power tool for common filesystem tasks",
  "author": "Rich Harris",
  "version": "0.4.0",
  "license": "MIT",
  "repository": "https://github.com/rich-harris/sander",
  "dependencies": {
    "es6-promise": "^2.0.0",
    "mkdirp": "^0.5.0",
    "rimraf": "^2.2.8",
    "graceful-fs": "^3.0.4"
  },
  "main": "dist/sander.cjs.js",
  "jsnext:main": "dist/sander.es6.js",
  "devDependencies": {
    "buffer-crc32": "^0.2.3",
    "mocha": "^2.2.4",
    "rollup-plugin-buble": "^0.5.0"
  },
  "scripts": {
    "test": "mocha",
    "pretest": "npm run build:cjs",
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "rollup -c -f cjs -o dist/sander.cjs.js",
    "build:es": "rollup -c -f es6 -o dist/sander.es.js",
    "prepublish": "npm test && npm run build:es"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ]
}
